# SAFE MODE - Original config with filters
# =========================================

# Your Polymarket wallet
PRIVATE_KEY=your_private_key_here
FUNDER_ADDRESS=0xyour_funder_address_here

# Target trader to copy (@0x8dxd)
TARGET_TRADER_ADDRESS=0x63ce342161250d705dc0b16df89036c8e5f9ba9a

# Copy 10% of their trade size
COPY_RATIO=0.10

# Signal filter: ignore tiny/noise target trades
MIN_TARGET_TRADE=50

# Max slippage tolerance
MAX_SLIPPAGE_PERCENT=3

# How long to leave GTC orders live before cancelling
STALE_ORDER_TIMEOUT=2.0

# ONE-SIDE ONLY: Don't copy trades for opposite side of markets we already hold
SKIP_OPPOSITE_SIDE=true

# Trade limits (scaled for $1.5k bankroll)
MIN_TRADE_AMOUNT=0.50
MAX_TRADE_AMOUNT=50.0

# Poll every 0.2 seconds
POLL_INTERVAL_SECONDS=0.2

# LIVE TRADING MODE - real orders
DRY_RUN=false

# Paper trading starting balance
INITIAL_PAPER_BALANCE=100000.0

# Price filters - avoid extreme prices
MAX_PRICE=0.85
MIN_PRICE=0.15

# Conviction scaling
HIGH_CONVICTION_THRESHOLD=200.0
HIGH_CONVICTION_RATIO=0.20
LOW_CONVICTION_RATIO=0.03

# Per-asset copy ratios
BTC_COPY_RATIO=0.02
ETH_COPY_RATIO=0.03
SOL_COPY_RATIO=0.04

# Cloudflare cookie
CF_BM_COOKIE=your___cf_bm_cookie_here

USE_WEBSOCKET=false
