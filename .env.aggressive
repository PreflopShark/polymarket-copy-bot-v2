# PAPER MODE - Same settings as live, but dry run
# ================================================

# Your Polymarket wallet
PRIVATE_KEY=your_private_key_here
FUNDER_ADDRESS=0x9F5DA49468EF0197aC5477f8D82Dcb1b659946d2

# Target trader to copy (@0x8dxd)
TARGET_TRADER_ADDRESS=0x63ce342161250d705dc0b16df89036c8e5f9ba9a

# Copy ratios
# NOTE: for 15-min crypto markets the bot uses the per-asset ratios below.
COPY_RATIO=0.10

# Signal filter: ignore tiny/noise target trades
# (reduces the $1-min clamp spam while keeping high variance)
MIN_TARGET_TRADE=50

# Max slippage tolerance (ROI-first: accept more fills)
MAX_SLIPPAGE_PERCENT=10

# How long to leave GTC orders live before cancelling
STALE_ORDER_TIMEOUT=2.0

# ONE-SIDE ONLY: Don't copy trades for opposite side of markets we already hold
SKIP_OPPOSITE_SIDE=true

# Trade limits (scaled for ~$1.5k bankroll)
MIN_TRADE_AMOUNT=1.00
MAX_TRADE_AMOUNT=50.0

# Poll every 0.2 seconds
POLL_INTERVAL_SECONDS=0.2

# PAPER TRADING - dry run mode
DRY_RUN=true

# Paper trading starting balance (match real account)
INITIAL_PAPER_BALANCE=1500.0

# Price filters - avoid extreme prices
MAX_PRICE=0.85
MIN_PRICE=0.15

# Hedging tolerance (higher = more variance)
MAX_HEDGE_IMBALANCE_PERCENT=50

# Conviction scaling - fallback for non-crypto markets
HIGH_CONVICTION_THRESHOLD=200.0
HIGH_CONVICTION_RATIO=0.20
LOW_CONVICTION_RATIO=0.03

# Per-asset copy ratios for 15-minute crypto markets
BTC_COPY_RATIO=0.02
ETH_COPY_RATIO=0.03
SOL_COPY_RATIO=0.04

# Auto-redeem (disable unless Polygon gas is funded)
ENABLE_AUTO_REDEEM=false

# Cloudflare bypass
ENABLE_BROWSER_BYPASS=true
BROWSER_HEADLESS=true

# Cloudflare cookie (from browser - expires ~30 min)
CF_BM_COOKIE=your___cf_bm_cookie_here

# WebSocket monitoring (experimental)
USE_WEBSOCKET=false
