# Polymarket Copy Trading Bot Configuration
# Copy this file to .env and fill in your values

# Your wallet's private key (required)
# WARNING: Keep this secret! Never commit to git!
PRIVATE_KEY=your_private_key_here

# Builder API credentials (optional - for faster API access)
# Get these from https://polymarket.com/settings/api-keys
# If provided, these will be used instead of deriving credentials from private key
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# Your funder/proxy wallet address where funds are held (required)
# Example: 0x1234... (42-char hex address)
FUNDER_ADDRESS=0xyour_funder_address_here

# Target trader's wallet address to copy (required)
# Example: 0x63ce342161250d705dc0b16df89036c8e5f9ba9a
TARGET_TRADER_ADDRESS=0x63ce342161250d705dc0b16df89036c8e5f9ba9a

# Copy ratio - what fraction of their trade size to copy (default: 0.1 = 10%)
COPY_RATIO=0.1

# Minimum trade amount in USDC (default: 1.0)
MIN_TRADE_AMOUNT=1.0

# Maximum trade amount in USDC (default: 100.0)
MAX_TRADE_AMOUNT=100.0

# How often to poll for new trades in seconds (default: 2.0)
POLL_INTERVAL_SECONDS=2.0

# Dry run mode - set to true to paper trade without real money (default: true)
DRY_RUN=true

# Auto-redeem (optional) - disable if you don't want periodic redeem checks
ENABLE_AUTO_REDEEM=false

# Execution (optional)
# How long to leave GTC orders live before cancelling (default: 2.0)
STALE_ORDER_TIMEOUT=2.0

# Cloudflare cookie (optional) - may help avoid 403 blocks; expires periodically
CF_BM_COOKIE=

# Cloudflare bypass via silent browser (optional) - uses undetected-chromedriver to fetch cookies
# If enabled, the bot will start a (headless) Chrome session at startup.
ENABLE_BROWSER_BYPASS=false
# Run the bypass browser without a visible window
BROWSER_HEADLESS=true

# WebSocket monitoring (optional)
USE_WEBSOCKET=false

# Initial paper trading balance in USDC (default: 1000.0)
INITIAL_PAPER_BALANCE=1000.0
